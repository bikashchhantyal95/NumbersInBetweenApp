<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NumbersInBetween.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Frame>
                <HorizontalStackLayout>
                    <Label Text="First Number"/>
                    <Entry Keyboard="Numeric" x:Name="firstNumber" />
                </HorizontalStackLayout>
            </Frame>
            <Frame>
                <HorizontalStackLayout>
                    <Label Text="Second Number"/>
                    <Entry Keyboard="Numeric" x:Name="secondNumber" />
                </HorizontalStackLayout>
            </Frame>
            <Frame>
                <HorizontalStackLayout>
                    <Label Text="Count By"/>
                    <Entry Keyboard="Numeric" x:Name="incrementBy" />
                </HorizontalStackLayout>
            </Frame>
            <Button Text="Display"/>
            <Frame>
                <HorizontalStackLayout>
                    <Label Text="Output Number"/>
                    <Label x:Name="OutputValue"/>
                </HorizontalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

